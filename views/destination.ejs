<!DOCTYPE html>
<html>

<head>
    <% include partials/head %>
</head>

<body>
    <header>

      

<nav>

    <% include partials/navbar %>

</nav>
      

        <section>
            <figcaption class="hp-img">
                <img src='/images/<%= destinations.uploaded_file %>' alt="">
                <div>
                    <h2>
                        <%= destinations.destination_name %>
                    </h2>
                    <p>
                        <%= destinations.meta_description%>
                    </p>
                </div>
            </figcaption>
        </section>

    </header>

    <main id="main_destination">


        <article>
            <!-- Write up -->
            <h2>
                <%= destinations.write_up_header %>

            </h2>

            <p>
                <%= destinations.write_up %>
            </p>

        </article>

        <section>
            <!-- google API -->

            <div id="map">

            </div>

        </section>


        <section>
            <figcaption>
                <!-- gallery -->
                <div class="gallery">
                    <a target="_blank" href="/images/vietnam/2.jpeg">
                        <img src="/images/<%= destinations.uploaded_file2 %>" alt="Fjords" width="300" height="200">
                    </a>

                </div>

                <div class="gallery">
                    <a target="_blank" href="forest.jpg">
                        <img src="/images/<%= destinations.uploaded_file3 %>" alt="Forest" width="300" height="200">
                    </a>

                </div>

                <div class="gallery">
                    <a target="_blank" href="lights.jpg">
                        <img src="/images/<%= destinations.uploaded_file4 %>" alt="Northern Lights" width="300" height="200">
                    </a>

                </div>

                <div class="gallery">
                    <a target="_blank" href="mountains.jpg">
                        <img src="/images/<%= destinations.uploaded_file5 %>" alt="Mountains" width="300" height="200">
                    </a>

                </div>



            </figcaption>
        </section>

    </main>





</body>

<script>
    var longitude = <%= destinations.longitude %>;

    var latitude = <%= destinations.latitude %>;

    var map;

    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: {
                lat: latitude,
                lng: longitude
            },
            zoom: 7
        });
    }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDYjwczyVJ5vjQAwGCgBfoecZ7o0k1nbuc&callback=initMap" async
    defer></script>

</html>